<?xml version="1.0" encoding="UTF-8" ?>
<entities>
    <entity entity-name="Party" package="tutorial.party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="partyTypeEnumId" type="id"/>
        <field name="createdDate" type="date-time" />

        <relationship type="one" related="moqui.basic.Enumeration" >
            <key-map field-name="partyTypeEnumId" related-field-name="enumId"/>
        </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="Party Type" enumTypeId="partyType"/>
            <moqui.basic.Enumeration description="Person" enumId="PERSON" enumTypeId="partyType"/>
            <moqui.basic.Enumeration description="Party Group" enumId="PARTY_GROUP" enumTypeId="partyType"/>
        </seed-data>

    </entity>

    <entity entity-name="Person" package="tutorial.party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="firstName" type="text-medium"/>
        <field name="lastName" type="text-medium"/>
        <field name="dateOfBirth" type="date"/>

        <relationship type="one" related="tutorial.party.Party" no-fk="true">
            <key-map field-name="partyId"/>
        </relationship>

    </entity>
    
    <entity entity-name="PartyGroup" package="tutorial.party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="groupName" type="text-medium"/>
        <field name="description" type="text-long" not-null="true"/>
        
        <relationship type="one" related="tutorial.party.Party">
            <key-map field-name="partyId"/>
        </relationship>

    </entity>
    
    <entity entity-name="ContactMech" package="tutorial.party">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="contactMechTypeId" type="id"/>
        <field name="infoString" type="text-medium"/>
        <field name="createdDate" type="date-time"/>
        
       <relationship type="one" related="moqui.basic.EnumerationType">
           <key-map field-name="contactMechTypeId" related="enumId"/>
       </relationship>

        <seed-data>
            <moqui.basic.EnumerationType description="Party type" enumTypeId="PartyType"/>
            <moqui.basic.Enumeration description="PERSON" enumId="PERSON" enumTypeId="PartyType"/>
        </seed-data>
    </entity>
    
    <entity entity-name="PartyContactMech" package="tutorial.Party">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="fromDate" type="date-time" is-pk="true"/>
        <field name="thruDate" type="date-time"/>

        <relationship type="one" related="tutorial.party.Party">
            <key-map field-name="partyId"/>
        </relationship>
        <relationship type="one" related="tutorial.party.ContactMech">
            <key-map field-name="contactMechId"/>
        </relationship>
    </entity>
</entities>