<?xml version="1.0" encoding="UTF-8" ?>
<screen  require-authentication="anonymous-all" include-child-content="true"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://moqui.org/xsd/xml-screen-2.1.xsd" >
    <parameter name="abc"  />
    <parameter name="pqr"/>
    <transition name="createPerson">
        <actions>
            <set field="partyTypeEnumId" default-value="PERSON"/>
            <service-call name="create#tutorial.party.Party" in-map="context " out-map="party"/>
            <set field="partyId" from="party.partyId"/>
            <service-call name="create#tutorial.party.Person" in-map="context"/>
        </actions>

        <default-response url="/qapps/kuchb">
        </default-response>
    </transition>

    <actions>

        <set field="partyTypeEnumId" default-value="PERSON"/>
    </actions>

    <widgets>
        <label text="${abc}"/>
        <label text="${pqr}"/>
        <label text="Create Person" type="h1"/>
        <form-single name="Person" transition="createPerson">
            <field name="firstName" >
                <default-field title="First Name" >
                    <text-line/>
                </default-field>
            </field>

            <field name="lastName" >
                <default-field title="Last Name">
                    <text-line/>
                </default-field>
            </field>

            <field name="dateOfBirth" >
                <default-field title="Date Of Birth">
                    <date-time type="date"/>
                </default-field>
            </field>
            <field name="createdDate">
                <default-field>
                    <hidden default-value="${ec.user.nowTimestamp}"/>
                </default-field>
            </field>

            <field name="submitButtom" >
                <default-field>
                    <submit/>
                </default-field>
            </field>
        </form-single>

    </widgets>
</screen>