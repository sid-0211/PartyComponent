<?xml version="1.0" encoding="UTF-8" ?>
<screen  require-authentication="anonymous-all"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://moqui.org/xsd/xml-screen-2.1.xsd" >
    <transition name="updatePartyGroup">

        <actions>
            <service-call name="update#PartyGroup" in-map="context" />
        </actions>

        <default-response url="/qapps/RegisterPartyScreen">
        </default-response>

    </transition>



    <actions>

        <entity-find-one entity-name="tutorial.party.PartyGroup" value-field="group">
            <field-map field-name="partyId" from="partyId"/>
        </entity-find-one>

        <!--        <set field="partyId"  from="partyId"/>-->
    </actions>
    <widgets>
        <container-box>
            <box-header title="Edit Party Group">
            </box-header>
            <box-body >


                <form-single name="EditPartyGroup" transition="updatePartyGroup" >
                    <field name="partyId">
                        <default-field>
                            <hidden default-value="${partyId}"/>
                        </default-field>
                    </field>
                    <field name="partyId">
                        <default-field title="PartyId">
                            <display text="${partyId}"/>
                        </default-field>
                    </field>
                    <field name="groupName">
                        <default-field title="Group Name">
                            <text-line default-value="${group.groupName}"/>
                        </default-field>
                    </field>
                    <field name="description">
                        <default-field title="Description">
                            <text-area default-value="${group.description}"/>
                        </default-field>
                    </field>
                    <field name="submitButton">
                        <default-field title="Update">
                            <submit/>
                        </default-field>
                    </field>
                </form-single>

            </box-body>
        </container-box>
    </widgets>
</screen>